{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="mt-3 text-center">Accueil</h1>
    {% set images = [
        'image3.svg',
    ] %}

    <div class="image-container">
        {% for image in images %}
            <img src="{{ asset('/assets/img/image_bg/' ~ image) }}" alt="Image" style="margin-left: {{ loop.index * 20 }}px;"/>
        {% endfor %}
    </div>

{% endblock %}
